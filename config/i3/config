exec --no-startup-id xrandr --output HDMI1 --auto --left-of DP1
exec --no-startup-id xmodmap -e "remove lock = Caps_Lock" && xmodmap -e "keycode 66 = Control_L" && xmodmap -e "add control = Control_L"
exec --no-startup-id which compton && compton -b
exec --no-startup-id which dunst && dunst &
