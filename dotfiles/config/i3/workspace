# Move the current workspace to other outputs
bindsym $ctrl+$mod+$shift+Up move workspace to output up
bindsym $ctrl+$mod+$shift+Down move workspace to output down
bindsym $ctrl+$mod+$shift+Left move workspace to output left
bindsym $ctrl+$mod+$shift+Right move workspace to output right

# sticky the focused container on top
bindsym $mod+$shift+s sticky toggle

# switch to workspace
bindsym $ctrl+$alt+1 workspace 1
bindsym $ctrl+$alt+2 workspace 2
bindsym $ctrl+$alt+3 workspace 3
bindsym $ctrl+$alt+4 workspace 4
bindsym $ctrl+$alt+5 workspace 5

# move focused container to workspace
bindsym $ctrl+$alt+$shift+1 move container to workspace 1
bindsym $ctrl+$alt+$shift+2 move container to workspace 2
bindsym $ctrl+$alt+$shift+3 move container to workspace 3
bindsym $ctrl+$alt+$shift+4 move container to workspace 4
bindsym $ctrl+$alt+$shift+5 move container to workspace 5

# focus workspace
bindsym $mod+Left workspace prev_on_output
bindsym $mod+Right workspace next_on_output
