alias brs="sudo systemctl restart named"
alias brl="sudo systemctl reload named"
alias cmail="$SUDO cat /var/log/maillog"
alias cs="$SUDO cat /var/log/messages"
alias faa="$SUDO tail --follow --retry /var/log/httpd/access.log"
alias fae="$SUDO tail --follow --retry /var/log/httpd/error.log"
alias fsa="$SUDO tail --follow --retry /var/log/httpd/ssl_access.log"
alias fse="$SUDO tail --follow --retry /var/log/httpd/ssl_error.log"
alias fsr="$SUDO tail --follow --retry /var/log/httpd/ssl_request.log"
alias llc="lsl"
alias lsl="ls --lcontext"
alias prs="sudo systemctl restart postfix"
alias prl="sudo systemctl reload postfix"
alias tmail="$SUDO tail --follow --retry /var/log/maillog"
alias tse="$SUDO tail --follow --retry /var/log/secure"
alias ts="$SUDO tail --follow --retry /var/log/messages"
alias update="$SUDO yum update --assumeyes"
