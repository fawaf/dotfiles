# less {{{
# Have less display colours
# from: https://wiki.archlinux.org/index.php/Color_output_in_console#man
LESS="--RAW-CONTROL-CHARS --LONG-PROMPT --IGNORE-CASE"
LESS_TERMCAP_mb=$'\e[1;32m'     # begin bold
LESS_TERMCAP_md=$'\e[1;31m'     # begin blink
LESS_TERMCAP_so=$'\e[01;44;37m' # begin reverse video
LESS_TERMCAP_us=$'\e[01;34m'    # begin underline
LESS_TERMCAP_me=$'\e[0m'        # reset bold/blink
LESS_TERMCAP_se=$'\e[0m'        # reset reverse video
LESS_TERMCAP_ue=$'\e[0m'        # reset underline
GROFF_NO_SGR=1                  # for konsole and gnome-terminal

export LESS
export LESS_TERMCAP_mb
export LESS_TERMCAP_md
export LESS_TERMCAP_so
export LESS_TERMCAP_us
export LESS_TERMCAP_me
export LESS_TERMCAP_se
export LESS_TERMCAP_ue
export GROFF_NO_SGR
# }}}

# regular {{{
## define vars
BASH_COMP_DEBUG_FILE="/tmp/bash_debug.log"
BAT_PAGER="most"
BAT_THEME="ansi"
CASE_SENSITIVE="true"
CC="gcc"
DISABLE_FIG="true"
EDITOR="nvim"
FZF_ALT_C_COMMAND='fd . $(git rev-parse --show-toplevel) --type d --exclude .git --color=never'
FZF_ALT_C_OPTS="--preview 'cd {} && basename {} && tree -C .' --delimiter $HOME/ --with-nth 2"
FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
FZF_CTRL_T_OPTS="--preview 'bat --color=always --line-range :500 {}'"
FZF_DEFAULT_COMMAND='fd --type f --color=never'
GOPATH="$HOME/go"
LYNX_CFG_FILE="$HOME/.lynxrc"
LYNX_CFG="$HOME/.lynxrc"
MYSQL_PS1="\u@\h using database \d \n(\c) > "
PAGER="most"
SUDO="/usr/bin/sudo"
SVN_EDITOR="nvim"
TERMINAL="alacritty"
TF_LOG_PATH="/tmp/terraform.log"
VISUAL="nvim"
WWW_HOME="https://www.google.com"
XDG_CONFIG_HOME="$HOME/.config"
OPENSSL_CONF="$XDG_CONFIG_HOME/openssl.cnf"

## export vars
export BASH_COMP_DEBUG_FILE
export BAT_PAGER
export BAT_THEME
export CASE_SENSITIVE
export CC
export DISABLE_FIG
export EDITOR
export FZF_ALT_C_COMMAND=
export FZF_ALT_C_OPTS
export FZF_CTRL_T_COMMAND
export FZF_CTRL_T_OPTS
export FZF_DEFAULT_COMMAND
export GOPATH
export LYNX_CFG_FILE
export LYNX_CFG
export MYSQL_PS1
export PAGER
export SUDO
export SVN_EDITOR
export TERMINAL
export TF_LOG_PATH
export VISUAL
export WWW_HOME
export XDG_CONFIG_HOME
export OPENSSL_CONF
# }}}

# {{{ paths
to_path() {
  local the_path=${1-}

  printf %s $the_path "${@/#/:}"
}

cdpath=(
  $HOME
  .
  ..
)
CDPATH="$(to_path $cdpath)"

fpath=(
  $FPATH
  $HOME/.zsh/completion
)
FPATH="$(to_path $fpath)"

infopath=(
  $INFOPATH
  $HOMEBREW_PREFIX/share/info
)
INFOPATH="$(to_path $infopath)"

ld_library_path=(
  /lib
  /usr/lib
  /usr/lib64
  /lib64
  /usr/local/lib
  /lib32
  /usr/lib32
  /libx32
  /usr/libx32
)
LD_LIBRARY_PATH="$(to_path $ld_library_path)"
LIBRARY_PATH="$LD_LIBRARY_PATH"

manpath=(
  /usr/local/share/man
  /usr/share/man
  /sw/share/man
  /opt/local/share/man
  /usr/X11R6/man
  $HOME/.local/share/man
  /opt/X11/share/man
  /usr/X11/share/man
  $HOME/.rvm/man
  $HOMEBREW_PREFIX
  $HOMEBREW_PREFIX/share/man
)
MANPATH="$(to_path $manpath)"

path=(
  $ARCHDIR
  $GOPATH/bin
  $HOME/bin
  $HOMEBREW_PREFIX/bin
  $HOMEBREW_PREFIX/sbin
  $HOME/.cargo/bin
  $HOME/.krew/bin
  $HOME/.local/android/platform-tools
  $HOME/.local/android/tools
  $HOME/.local/bin
  $HOME/.rvm/bin
  $JAVA_HOME/bin
  /bin
  /sbin
  /gtk-prefix/bin
  /opt/aws/bin
  /opt/local/bin
  /opt/local/sbin
  /snap/bin
  /sw/bin
  /sw/sbin
  /usr/local/bin
  /usr/local/sbin
  /usr/bin
  /usr/sbin
  /usr/texbin
  /usr/X11/bin
  /opt/X11/bin
)
PATH="$(to_path $path)"

export CDPATH
export FPATH
export INFOPATH
#export LD_LIBRARY_PATH
#export LIBRARY_PATH
export MANPATH
export PATH
# }}}

