# {{{ singular aliases
KERNEL_NAME="`uname`"
if [[ "$KERNEL_NAME" == "Linux" ]]; then
    source $HOME/.aliases-linux
    if [[ -f /etc/debian_version ]]; then
        source $HOME/.aliases-debian
    fi
    if [[ -f /etc/SuSE-release ]]; then
        source $HOME/.aliases-suse
    fi
    if [[ -f /etc/redhat-release ]]; then
        source $HOME/.aliases-fedora
    fi
elif [[ "$KERNEL_NAME" == "Darwin" ]]; then
    source $HOME/.aliases-darwin
elif [[ "$KERNEL_NAME" =~ "CYGWIN_NT" ]]; then
    source $HOME/.aliases-cygwin
fi
# }}}
