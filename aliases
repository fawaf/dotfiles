# common aliases {{{
alias a="alias"
alias ba="$EDITOR ~/.aliases-custom && source ~/.aliases && source ~/.aliases-custom"
alias c="clear"
alias catn="cat -n"
alias cd..="cd .."
alias ce="crontab -e"
alias chmod="chmod -vvv"
alias chown="chown -vv"
alias cl="crontab -l"
alias cp="cp -iv"
alias d="dir"
alias dc="cd"
alias dh="df -h"
alias diff="diff -u"
alias dir="ls"
alias e="exit"
alias eb="exec bash"
alias ee="$EDITOR ~/.exports-custom && source ~/.exports-custom"
alias esc="$EDITOR ~/.ssh/config"
alias ez="exec zsh"
alias fiel="file"
alias fna="find . -not -path '*.svn/*' -not -path '*.git/*'"
alias fng="find . -not -path '*.git/*'"
alias fns="find . -not -path '*.svn/*'"
alias g="gr"
alias gb="while read l;do cd \$l;git branch|grep -v master;done"
alias gbd="gco master; gl; gf -p; git remote prune origin; git branch -d"
alias gc="git commit"
alias gca="git commit -av"
alias gco="git checkout"
alias gd="git diff"
alias gdi="git di"
alias gerp="grep"
alias gf="git fetch"
alias gi="rm -rfv .git/hooks && git init"
alias gl="git pull"
alias glg="git log"
alias glo="git log"
alias glu="git pull upstream"
alias glum="git pull upstream master"
alias glup="glum && gp"
alias gp="git push"
alias gr="groups"
alias gra="git remote add"
alias grau="git remote add upstream"
alias grb="git rebase -i"
alias grbm="git rebase -i origin/master"
alias grep="grep -n --color"
alias grpe="grep"
alias gst="git status"
alias h="ht"
alias how="how $EDITOR"
alias ht="htop -d 10 --sort-key CPU"
alias k="kill"
alias ka="killall"
alias l="ls"
alias l1="ls -1"
alias la="ls -a"
alias lal="ls -al"
alias less="less -RM"
alias lh="llh"
alias ll="ls -l"
alias lla="ls -la"
alias llh="ls -lh"
alias llr="ls -lR"
alias llra="ls -lRa"
alias llrh="ls -lRh"
alias ln="ln -v"
alias lns="ln -s"
alias lr="ls -R"
alias lra="ls -Ra"
alias lss="ls -s"
alias lsss="ls -S -s"
alias ltr="ls -ltr"
alias m="mutt"
alias mc="make clean"
alias mls="screen -ls; tmux list-sessions"
alias motd="cat /etc/motd"
alias mv="mv -iv"
alias osc="openssl s_client"
alias oxt="openssl x509 -text -noout"
alias p="pwd"
alias pb="ping berkeley.edu"
alias pg="ping google.com"
alias pgp="gpg"
alias psa="ps axuwwwww"
alias pubip="publicip"
alias publicip="curl -4 -L -sf -m 2 http://www.fawong.com/ip.php && echo"
alias q="e"
alias quit="exit"
alias rm="rm -iv"
alias rmdir="rmdir -v"
alias rmf="rm -rfv"
alias rsync="rsync --iconv=. -avzH --progress --timeout=5 -e ssh"
alias s="screen -r"
alias scpi="scp -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
alias screen="screen -t `hostname`"
alias sls="screen -ls"
alias sshi="ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
alias tls="tmux list-sessions"
alias u="users"
alias ua="uname -a"
alias un="unalias"
alias unlink="unlink -iv"
alias untar="tar xvf"
alias up="ut"
alias ut="uptime"
alias vi="vim"
alias vimotd="sudo $EDITOR /etc/motd"
alias vm="mv"
alias watch="watch -n 0"
alias whcih="which"
alias za="$EDITOR ~/.zshrc-custom && source ~/.zshrc"
# }}}

# {{{ singular aliases
KERNEL_NAME="`uname`"
if [ "$KERNEL_NAME" == "Linux" ]; then
    source ~/.aliases-linux
    if [ -f /etc/debian_version ]; then
        source ~/.aliases-debian
    fi
elif [ "$KERNEL_NAME" == "Darwin" ]; then
    source ~/.aliases-darwin
elif [ "$KERNEL_NAME" == "CYGWIN_NT-6.1" ]; then
    source ~/.aliases-cygwin
fi
# }}}
