# common aliases {{{
alias a="alias"
alias ba="$EDITOR ~/.aliases-custom && source ~/.aliases && source ~/.aliases-custom"
alias c="clear"
alias catn="cat -n"
alias cd..="cd .."
alias ce="crontab -e"
alias chmod="chmod -vvv"
alias chown="chown -vv"
alias cl="crontab -l"
alias cp="cp -iv"
alias d="dir"
alias dc="cd"
alias dh="df -h"
alias diff="diff -u"
alias dir="ls"
alias e="exit"
alias eb="exec bash"
alias ee="$EDITOR ~/.exports-custom && source ~/.exports-custom"
alias esc="$EDITOR ~/.ssh/config"
alias ez="exec zsh"
alias fiel="file"
alias fna="find . -not -path '*.svn/*' -not -path '*.git/*'"
alias fng="find . -not -path '*.git/*'"
alias fns="find . -not -path '*.svn/*'"
alias g="gr"
alias gc="git commit"
alias gca="git commit -av"
alias gco="git checkout"
alias gd="git diff"
alias gdi="git di"
alias gerp="grep"
alias gf="git fetch"
alias gi="rm -rfv .git/hooks && git init"
alias gl="git pull"
alias glu="git pull upstream"
alias glum="git pull upstream master"
alias glup="glum && gp"
alias go="git log"
alias gp="git push"
alias gr="groups"
alias gra="git remote add"
alias grau="git remote add upstream"
alias grep="grep -n --color"
alias grpe="grep"
alias gst="git status"
alias h="ht"
alias how="how $EDITOR"
alias ht="htop -d 10 --sort-key CPU"
alias k="kill"
alias ka="killall"
alias l1="ls -1"
alias l="ls"
alias la="ls -a"
alias lal="ls -al"
alias less="less -RM"
alias lh="llh"
alias ll="ls -l"
alias lla="ls -la"
alias llh="ls -lh"
alias llr="ls -lR"
alias llra="ls -lRa"
alias llrh="ls -lRh"
alias ln="ln -v"
alias lns="ln -s"
alias lr="ls -R"
alias lra="ls -Ra"
alias ls="ls --group-directories-first --color=auto"
alias lss="ls -s"
alias lsss="ls -S -s"
alias m="mutt"
alias mc="make clean"
alias mls="screen -ls; tmux list-sessions"
alias motd="cat /etc/motd"
alias mv="mv -iv"
alias osc="openssl s_client"
alias oxt="openssl x509 -text -noout"
alias p="pwd"
alias pb="ping berkeley.edu"
alias pg="ping google.com"
alias pgp="gpg"
alias psa="ps axuwwwww"
alias pubip="publicip"
alias publicip="wget -q -4 -O - http://www.fawong.com/ip.php && echo"
alias q="e"
alias quit="exit"
alias rm="rm -iv"
alias rmf="rm -rfv"
alias rsync="rsync --iconv=. -avzH --progress --timeout=5 -e ssh"
alias s="screen -r"
alias scpi="scp -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
alias screen="screen -t `hostname`"
alias sls="screen -ls"
alias sshi="ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no"
alias tls="tmux list-sessions"
alias u="users"
alias ua="uname -a"
alias ud="update"
alias un="unalias"
alias unlink="unlink -iv"
alias untar="tar xvf"
alias up="ut"
alias ut="uptime"
alias vi="vim"
alias vimotd="sudo $EDITOR /etc/motd"
alias vm="mv"
alias watch="watch -n 0"
alias whcih="which"
alias za="$EDITOR ~/.zshrc-custom && source ~/.zshrc"
# }}}

# {{{ singular aliases
if [ `uname` == "Linux" ]; then
    if [ -f /etc/debian_version ]; then
        source ~/.aliases-debian
    else
        source ~/.aliases-linux
    fi
elif [ `uname` == "Darwin" ]; then
    source ~/.aliases-darwin
fi
# }}}
